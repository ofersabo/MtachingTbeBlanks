{
  "dataset_reader": {
    "type": "mtb_reader",
    "tokenizer": {"type":"word","word_splitter": "ofer-bert-basic"},
    "token_indexers": {
      "bert": {
          "type": "bert-pretrained",
          "pretrained_model": "/Users/ofersabo/PycharmProjects/alen/my_library/downlowded_bert",
          "do_lowercase": false,
          "use_starting_offsets": true
      },
      "token_characters": {
        "type": "characters",
        "min_padding_length": 3
      }
    }
  },
  "train_data_path": "data/train.json",
//  "validation_data_path": "data/fewrel_val.json",
  "model": {
    "type": "bert_for_mtb",
    // "bert_base" or "bert_large" for loading the appropriate BERT config.
    "bert_model_type": "bert_base",
    // Path to a tarball containing bert_config.json and pytorch_model.bin that are outputs from HuggingFace code
    // for BERT base
    "pretrained_archive_path": "https://s3-us-west-2.amazonaws.com/pradeepd-bert-qa-models/bert-base/bert_base_archive.tar.gz"
    // for BERT large
//    "pretrained_archive_path": "https://s3-us-west-2.amazonaws.com/pradeepd-bert-qa-models/bert-large/bert_large_archive.tar.gz",
    // BERT base threshold
    // BERT large threshold; dev tuned number is -1.9847722053527832
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "optimizer": {
        "type": "adam",
        "lr": 0.0001
    },
    "validation_metric": "+f1-measure-overall",
    "num_serialized_models_to_keep": 3,
    "num_epochs": 75,
    "grad_norm": 5.0,
    "patience": 25,
    "cuda_device": -1
  }
}